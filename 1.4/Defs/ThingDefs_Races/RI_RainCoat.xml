<Defs>
<!--老登套-->
<!--斗笠-->
    <ThingDef ParentName="ApparelMakeableBase">
    <defName>RI_Apparel_RainHat</defName>
    <label>斗笠</label>
    <description>一顶用干草制成的斗笠。</description>
    <recipeMaker>
      <researchPrerequisite />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/RI_Apparel_RainHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <costList>
      <Hay>10</Hay>
      <WoodLog>30</WoodLog>
    </costList>
    <techLevel>Neolithic</techLevel>
    <statBases>
	  <MaxHitPoints>170</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>1.11</Mass>
      <EquipDelay>1.5</EquipDelay>
	  <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
	  <Insulation_Cold>12</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/RI_Apparel_RainHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>
	
<!--蓑衣-->
    <ThingDef ParentName="ApparelMakeableBase">
    <defName>RI_Apparel_RainCape</defName>
    <label>蓑衣</label>
    <description>一件用干草制成的蓑衣。</description>
    <graphicData>
	  <!--UI贴图路径-->
      <texPath>Things/Apparel/RI_Apparel_RainCape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
	<costList>
      <Hay>70</Hay>
      <WoodLog>20</WoodLog>
    </costList>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>220</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>3.1</Mass>
      <EquipDelay>3</EquipDelay>
	  <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.31</ArmorRating_Blunt>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
	  <Insulation_Cold>25</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
	  <!--穿着贴图路径-->
      <wornGraphicPath>Things/Apparel/RI_Apparel_RainCape</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Neolithic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
    <recipeMaker>
      <displayPriority>220</displayPriority>
    </recipeMaker>
  </ThingDef>
</Defs>